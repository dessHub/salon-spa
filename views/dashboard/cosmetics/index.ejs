<% layout('dashboard/cosmeticadmin') %>
<div class ="container">
<div class="large-10 columns">
<div data-alert class="alert-box secondary radius">
  You have successfully logged in as <b><%= user.username %></b> Cosmetic Name: <b><%= cosmetic.name %></b>
  <a href="#" class="close">&times;</a>
</div>
<h class ="align-center">View Orders</h>
<div class="row collapse" id="appointment">
<table class="table">
  <thead>
      <th>#</th>
      <th>Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Product</th>
      <th>Action</th>
  </thead>
  <tbody>
    <% order.forEach(function(order, index){ %>
    <tr>
    <th scope="row"><%= index + 1 %></th>
      <td><%= order.name %></td>
      <td><%= order.phone %></td>
      <td><%= order.email %></td>
      <td><%= order.product %></td>
      <td>
            <select name="category">
              <option value="">Action</option>
              <option value="action1">Accept</option>
              <option value="action2">Reject</option>
            </select>
      </td>
    </tr>
    <%});%>
  </tbody>
</table>
</div>
</div>
</div>


</div>
</div>
</div>

