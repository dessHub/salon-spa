<% layout('dashboard/admin') %>
<div class ="container">
<div class="large-8 columns">
<h class ="align-center">Services</h>
<div class="row collapse" id="appointment">
<a class="small button success left " href="/addadminservice">Add Service</a>
<table>
 <table class="table">
      <th>#</th>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Options</th>
  </thead>
  <tbody>
  <% adminservice.forEach(function(adminservice, index){ %>
    <tr>
    <th scope="row"><%= index + 1 %></th>
      <td><%= adminservice.title  %></td>
      <td><%= adminservice.description  %></td>
      <td><a href=""><img class="thumbnail" src="/<%= adminservice.img %>" height="60px" width="60px"></a> </td>
      <td>          
      <ul class="options">
       <li><a href="/editadminservice/<%= adminservice._id %>" title="Edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>Update</a></li>
       <li><a href="/adminservicedelete/<%= adminservice._id %>" title="Delete"><i class="fa fa-trash" aria-hidden="true"></i>delete</a></li>
      </ul>
      </td>
    </tr>
       <%});%>
  </tbody>
</table>


</div>
</div>
</div>

