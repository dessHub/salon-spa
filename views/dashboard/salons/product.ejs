 <form id="Salon-form" method="post" class="form-horizontal" action="">
  <div class="row collapse">
   <div class="large-8 small-12 columns">
   <h>Products</h>
     <div class="row collapse">
        <div class="small-3 columns">
        <label for="Product Title">Title</label>
        </div>
