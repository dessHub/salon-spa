<% layout('dashboard/salonadmin') %>
<div class ="container">
<div class="large-10 columns">
<% for(i=0; i<salon.length; i++ ) { %>
<div data-alert class="alert-box secondary radius">

  You have successfully logged in as <b><%= user.username %></b> Salon Name: <b><%= salon[i].name %></b>
  <a href="#" class="close">&times;</a>
  
</div>
<% } %>
<h class ="align-center">View Appointments</h>
<div class="row collapse" id="appointment">
<table class="table">
  <thead>
      <th>#</th>
      <th>Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Style</th>
      <th>Date</th>
      <th>Time</th>
      <th>Action</th>
  </thead>
  <tbody>
    <% appointment.forEach(function(appointment, index){ %>
    <tr>
    <th scope="row"><%= index + 1 %></th>
      <td><%= appointment.name %></td>
      <td><%= appointment.phone %></td>
      <td><%= appointment.email %></td>
      <td><%= appointment.style %></td>
      <td><%= appointment.date %></td>
      <td><%= appointment.time %></td>
      <td>
            <select name="category">
              <option value="">Action</option>
              <option value="action1">Accept</option>
              <option value="action2">Reject</option>
            </select>
      </td>
    </tr>
    <%});%>
  </tbody>
</table>
</div>
</div>
</div>


</div>
</div>
</div>

