<% layout('dashboard/salonadmin') %>
<div class ="container">
<div class="large-10 columns">
<h class ="align-center">View Appointments</h>
<div class="row collapse" id="appointment">
<table>
  <thead>
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone Number</th>
      <th>Email</th>
      <th>Date</th>
      <th>Time</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% appointment.forEach(function(appointment, index){ %>
    <tr>
    <th scope="row"><%= index + 1 %></th>
      <td><%= appointment.fname %></td>
      <td><%= appointment.lname %></td>
      <td><%= appointment.phone %></td>
      <td><%= appointment.email %></td>
      <td><%= appointment.date %></td>
      <td><%= appointment.time %></td>
      <td>
            <select name="category">
              <option value="">Action</option>
              <option value="action1">Accept</option>
              <option value="action2">Reject</option>
            </select>
      </td>
    </tr>
    <%});%>
  </tbody>
</table>
</div>
</div>
</div>


</div>
</div>
</div>

