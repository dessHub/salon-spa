<% layout('dashboard/salonadmin') %>
 <form id="Salon-form" method="post" class="form-horizontal" action="">
  <div class="row collapse">
   <div class="large-8 small-12 columns">
   <h>News/Events</h>
     <div class="row collapse">
        <div class="small-3 columns">
        <label for="News Title">Title</label>
        </div>
         <div class="small-9 columns">
          <input type="text" required class="form-control" id="News Title" name="title"/>
        </div>
        </div>

        <div class="row collapse">
        <div class="small-3 columns">
        <label for="News Description">Description</label>
         </div>
         <div class="small-9 columns">
          <textarea cols="42" row collapses="5" required class="form-control" id="News Description" name="desc" ></textarea>
        </div>
        </div>


        <div class="row collapse">
        <div class="small-3 columns">
        <label for="NewsImage">News Image</label>
        </div>
         <div class="small-9 columns">          
          <label for="exampleFileUpload" class="small button success left">Upload File</label>
          <input type="file" id="exampleFileUpload" class="show-for-sr">
         </div>
    </div>

   <div class="row collapse">
    <div class="small-3 columns">
    </div>
    <div class="small-9 columns ">
       <a href="/news" class="success button left">Post</a>
      </div>
      </div>

    </div>
  </form>
   
