<% layout('dashboard/salonadmin') %>
<div class ="container">
<div class="large-8 columns">
<h class ="align-center">Services</h>
<div class="row collapse" id="appointment">
<a class="small button success left " href="/newproduct">Add Product</a>
<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
  <% product.forEach(function(product, index){ %>
    <tr>
    <th scope="row"><%= index + 1 %></th>
      <td><%= product.title  %></td>
      <td><%= product.description  %></td>
      <td><a href=""><img class="thumbnail" src="/<%= product.img %>" height="60px" width="60px"></a> </td>
      <td>          
      <ul class="options">
       <li><a href="/editproduct/<%= product._id %>" title="Edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>Update</a></li>
       <li><a href="/productdelete/<%= product._id %>" title="Delete"><i class="fa fa-trash" aria-hidden="true"></i>delete</a></li>
      </ul>
      </td>
    </tr>
       <%});%>
  </tbody>
</table>


</div>
</div>
</div>

